<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/text_size_normalLarge</item>
        <item name="android:textColor">@drawable/selector_color</item>
        <item name="android:button">@null</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="lineSpacing">0dp</item>
        <item name="firstBaselineToTopHeight">0dp</item>
    </style>

</resources>